pipeline {
     agent any
     stages {
         stage('Welcome Step') {
			steps {
				echo 'Welcome to LambdaTest'
			}
		}
	
	stage('Install Bandit') {
            steps {
		sh 'python3 --version'
		sh 'pip --version'
		
		sh 'virtualenv bandit-env'
		sh 'python3 -m venv bandit-env'
		sh 'source bandit-env/bin/activate'
		sh 'pip install bandit'
		sh 'bandit -r dsvpwa'
            }
        }
     }
}
