pipeline {
     agent any
     stages {
         stage('Welcome Step') {
			steps {
				echo 'Welcome to LambdaTest'
			}
		}

	stage('Install Bandit') {
            steps {
		bat 'python --version'
		sh 'python --version'
            }
        }
     }
     
     post {
         success {
             echo 'Pipeline succeeded!'
         }
         
         failure {
             echo 'Pipeline failed!'
         }
     }
}

